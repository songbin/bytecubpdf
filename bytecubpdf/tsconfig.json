{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    // "types": ["vite/client","node"],
    "paths": {
      "@/renderer/*": ["./src/renderer/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/main/*": ["./src/main/*"],
      "vue-i18n": ["node_modules/vue-i18n/dist/vue-i18n.d.ts"]
    },
    "typeRoots": [
      "./node_modules/@types",
       "./src/types",
      "./src/types/global",
      "./src/renderer/types",
      "./node_modules/vite/client"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
